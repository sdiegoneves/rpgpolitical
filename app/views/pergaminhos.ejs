<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<ul>
	     <% for (var i = 0; i < acoes.length; i++) {%>
			<li>
			<% 
				var date = new Date();
				var agora = date.getTime();
				var restante = Math.round((acoes[i].acao_termina_em-agora)/1000);

			%>

			
				<%= acoes[i].quantidade%>  
				<%= acoes[i].acao%><small>
				restam <span class="tempo_restante"><%= restante %></span>
				<small> segundos - <a href="#">revogar ordem</a></small>
		<% }%>
		</li>

	</ul>
</div>